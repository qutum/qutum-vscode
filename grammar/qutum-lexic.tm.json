{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Qutum",
	"scopeName": "source.qutum",
	"patterns": [
		{ "include": "#name" },
		{ "include": "#hex" },
		{ "include": "#int" },
		{ "include": "#float" },
		{ "include": "#comment" },
		{ "include": "#commentblock" },
		{ "include": "#string" },
		{ "include": "#stringblock" },
		{ "include": "#punc" },
		{ "include": "#operator" },
		{ "include": "#bitwise" },
		{ "include": "#arithmetic" },
		{ "include": "#comparison" },
		{ "include": "#logical" }
	],
	"repository": {
		"name": {
			"name": "entity.name.qutum",
			"match": "[a-zA-Z_][a-zA-Z\\d_]*"
		},
		"hex": {
			"name": "constant.numeric.hex.qutum",
			"match": "0[xX](_*\\h)+"
		},
		"int": {
			"name": "constant.numeric.int.qutum",
			"match": "\\d(_*\\d)*(\\.\\d(_*\\d)*)?\\b"
		},
		"float": {
			"name": "constant.numeric.float.qutum",
			"match": "\\d(_*\\d)*(\\.\\d(_*\\d)*)?([eE][+\\-]?\\d+[fF]?)?"
		},
		"comment": {
			"name": "comment.line.qutum",
			"match": "##.*$"
		},
		"commentblock": {
			"name": "comment.block.qutum",
			"begin": "(\\\\+)#",
			"end": "#\\1",
			"patterns": [
				{
					"name": "constant.character.qutum"
				}
			]
		},
		"string": {
			"name": "string.quoted.line.qutum",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.qutum",
					"match": "\\\\."
				}
			]
		},
		"stringblock": {
			"name": "string.unquoted.qutum",
			"begin": "(\\\\+)\"",
			"end": "\"\\1",
			"patterns": [
				{
					"name": "constant.character.qutum"
				}
			]
		},
		"bitwise": {
			"name": "keyword.operator.bitwise.qutum",
			"match": "<<|>>>?|&&|\\|\\||\\+\\+|--"
		},
		"arithmetic": {
			"name": "keyword.operator.arithmetic.qutum",
			"match": "\\*|/|%|//|%%|\\+|-"
		},
		"comparison": {
			"name": "keyword.operator.comparison.qutum",
			"match": "==|/=|<=|>=|<|>"
		},
		"logical": {
			"name": "keyword.operator.logical.qutum",
			"match": "&|\\||\\+\\||!"
		}
	}
}
